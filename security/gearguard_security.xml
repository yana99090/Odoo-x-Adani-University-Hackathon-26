<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- GearGuard Security Groups -->
    
    <!-- Category for GearGuard -->
    <record id="module_category_gearguard" model="ir.module.category">
        <field name="name">GearGuard Maintenance</field>
        <field name="description">Category for GearGuard Maintenance module access rights</field>
        <field name="sequence">50</field>
    </record>
    
    <!-- User Group - Can view and create maintenance requests -->
    <record id="group_gearguard_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_gearguard"/>
        <field name="comment">User can view equipment and create/manage maintenance requests</field>
    </record>
    
    <!-- Technician Group - Can work on assigned requests -->
    <record id="group_gearguard_technician" model="res.groups">
        <field name="name">Technician</field>
        <field name="category_id" ref="module_category_gearguard"/>
        <field name="implied_ids" eval="[(4, ref('group_gearguard_user'))]"/>
        <field name="comment">Technician can be assigned to requests and update their status</field>
    </record>
    
    <!-- Manager Group - Full access to all features -->
    <record id="group_gearguard_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_gearguard"/>
        <field name="implied_ids" eval="[(4, ref('group_gearguard_technician'))]"/>
        <field name="comment">Manager has full access to all GearGuard features</field>
    </record>
    
    <!-- Record Rules -->
    
    <!-- Users can see all equipment -->
    <record id="equipment_rule_user" model="ir.rule">
        <field name="name">Equipment: User sees all</field>
        <field name="model_id" ref="model_maintenance_equipment"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_gearguard_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>
    
    <!-- Managers can manage all equipment -->
    <record id="equipment_rule_manager" model="ir.rule">
        <field name="name">Equipment: Manager manages all</field>
        <field name="model_id" ref="model_maintenance_equipment"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_gearguard_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
    
    <!-- Users can see requests -->
    <record id="request_rule_user" model="ir.rule">
        <field name="name">Request: User sees all</field>
        <field name="model_id" ref="model_maintenance_request"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_gearguard_user'))]"/>
    </record>
    
    <!-- Technicians can see requests assigned to their team -->
    <record id="request_rule_technician" model="ir.rule">
        <field name="name">Request: Technician manages assigned</field>
        <field name="model_id" ref="model_maintenance_request"/>
        <field name="domain_force">['|', ('technician_id', '=', user.id), ('maintenance_team_id.member_ids', 'in', [user.id])]</field>
        <field name="groups" eval="[(4, ref('group_gearguard_technician'))]"/>
    </record>
    
</odoo>

