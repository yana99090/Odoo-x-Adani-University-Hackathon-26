<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Default Maintenance Stages -->
        
        <record id="stage_new" model="maintenance.stage">
            <field name="name">New</field>
            <field name="sequence">1</field>
            <field name="fold">False</field>
            <field name="done">False</field>
            <field name="is_scrap">False</field>
            <field name="description">New maintenance requests waiting to be assigned</field>
        </record>
        
        <record id="stage_in_progress" model="maintenance.stage">
            <field name="name">In Progress</field>
            <field name="sequence">2</field>
            <field name="fold">False</field>
            <field name="done">False</field>
            <field name="is_scrap">False</field>
            <field name="description">Maintenance work is currently being performed</field>
        </record>
        
        <record id="stage_repaired" model="maintenance.stage">
            <field name="name">Repaired</field>
            <field name="sequence">3</field>
            <field name="fold">True</field>
            <field name="done">True</field>
            <field name="is_scrap">False</field>
            <field name="description">Maintenance work has been completed successfully</field>
        </record>
        
        <record id="stage_scrap" model="maintenance.stage">
            <field name="name">Scrap</field>
            <field name="sequence">4</field>
            <field name="fold">True</field>
            <field name="done">True</field>
            <field name="is_scrap">True</field>
            <field name="description">Equipment cannot be repaired and has been scrapped</field>
        </record>
        
    </data>
</odoo>

